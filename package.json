    "@types/jest": "^29.5.2",
    "@types/mime": "^3.0.1",
    "@types/node": "^20.2.5",
    "@types/pug": "^2.0.6",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
