    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">16.0.0"
  },
  "eslintConfig": {
    "extends": [
      "@dylanarmstrong",
      "prettier"
    ],
